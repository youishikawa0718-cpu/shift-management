# Build stage
FROM node:20-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build

# Run stage with SSL support
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
COPY nginx.ssl.conf /etc/nginx/templates/default.conf.template
EXPOSE 80 443
CMD ["nginx", "-g", "daemon off;"]
